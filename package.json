{
  "name": "react-marvel-comics",
  "version": "0.0.0-development",
  "private": true,
  "author": "alex marcos <alexsbd1@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/kappys1/react-marvel-comics.git"
  },
  "license": "MIT",
  "homepage": ".",
  "dependencies": {
    "crypto-js": "^3.1.9-1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-id-swiper": "^2.3.2",
    "react-redux": "^7.1.0",
    "react-scripts": "3.0.1",
    "react-sidebar": "^3.0.2",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "swiper": "^4.5.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && cp .env build/.env",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once",
    "predeploy": "npm run build",
    "prettier": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test -- --watchAll=false && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^7.1.2",
    "commitizen": "^3.0.0",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.19",
    "travis-deploy-once": "^5.0.11"
  }
}
